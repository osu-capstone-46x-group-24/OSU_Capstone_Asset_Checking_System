name: Deploy
  
on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

  workflow_dispatch:
jobs:
    runs-on: ubuntu-latest
      - uses: actions/checkout@v4

      - name: Setup Node with cache
      uses: actions/setup-node@v4
      with:
        node-version: 22
        cache: npm
        cache-dependency-path: frontend/package-lock.json
          
      - name: install dependencies
        run: npm install
        working-directory: ./frontend

      - name: Deploy page
        run: npm run deploy
        working-directory: ./frontend
